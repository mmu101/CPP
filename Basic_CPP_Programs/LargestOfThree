//cpp program to find the largest of three numbers

#include <iostream>

int main()
{
	int num1=0,num2=0,num3=0;
	std::cout<<"Enter three numbers\n";
	std::cin>>a>>b>>c;
	if(a>b)
	{
		if(a>b)
			std::cout<<"Num1 is the largest: "<<a<<std::endl;
		else
			std::cout<<"Num3 is the largest: "<<c<<std::endl;
	}else{
		if(a>b)
			std::cout<<"Num2 is the largest: "<<b<<std::endl;
		else
			std::cout<<"Num3 is the largest: "<<c<<std::endl;
	}
}
